//Method for One Address CALL operation
public static void ONE_CALL()
{
	PC = PC + 1;
	TOS = TOS +1;
	String pc_bin = Dec_to_Bin_16_bit(PC);
	Stack[TOS] = pc_bin;
	PC = Effective_Address;
	PC_Frame_Index = EA_Frame_Index;
	PC_Frame_Number = EA_Frame_Number;
	try{printtrace();}
	catch(Exception e){
		
	}
	CPU(PC,Trace_Flag);	
}

