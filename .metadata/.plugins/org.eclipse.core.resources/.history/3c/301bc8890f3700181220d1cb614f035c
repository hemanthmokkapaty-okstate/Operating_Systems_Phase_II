//Method for One Address BRT operation
public static void ONE_BRT()
{
	if(Stack[TOS].equals("0000000000000001"))
	{
		PC = Effective_Address;
		Stack[TOS] = null;
		TOS = TOS-1;
		try{printtrace();}
		catch(Exception e){
			
		}
		CPU(PC,Trace_Flag);
	}
	else if(Stack[TOS].equals("0000000000000000"))
	{
		PC = PC+1;
		Stack[TOS] = null;
		TOS = TOS-1;
		try{printtrace();}
		catch(Exception e){
			
		}
		CPU(PC,Trace_Flag);
	}
}
